[Unit]
Description=Watch for active windows to toggle navbar
After=hyprland-session.target
Wants=hyprland-session.target

[Service]
ExecStart=/bin/bash -c 'PATH="$HOME/.local/bin/nekoroshell:$HOME/bin/nekoroshell:$PATH" exec navbar-watcher'
ExecStop=/usr/bin/killall waybar
Restart=always
RestartSec=1

[Install]
WantedBy=hyprland-session.target
