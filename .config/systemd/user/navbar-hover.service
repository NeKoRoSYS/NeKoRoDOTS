[Unit]
Description=Hover mouse to specified area to activate navbar
After=hyprland-session.target
Wants=hyprland-session.target

[Service]
Environment="PATH=%h/.local/bin/nekoroshell:%h/bin/nekoroshell:/usr/local/bin:/usr/bin:/bin"
ExecStart=navbar-hover
ExecStop=killall waybar
Restart=always
RestartSec=1

[Install]
WantedBy=hyprland-session.target
